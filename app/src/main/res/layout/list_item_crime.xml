<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/crime_list_item_solvedcheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:padding="@dimen/crime_item_check_padding"
        android:focusable="false"
        />
    <TextView
        android:id="@+id/crime_list_item_titletextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_list_item_solvedcheckBox"
        android:textStyle="bold"
        android:paddingLeft="@dimen/crime_item_text_padding"
        android:paddingRight="@dimen/crime_item_text_padding"
        android:text="@string/crime_title"
        />
    <TextView
        android:id="@+id/crime_list_item_datetextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crime_list_item_titletextview"
        android:layout_toLeftOf="@id/crime_list_item_solvedcheckBox"
        android:paddingLeft="@dimen/crime_item_text_padding"
        android:paddingRight="@dimen/crime_item_text_padding"
        android:paddingTop="@dimen/crime_item_text_padding"
        android:text="@string/crime_date"
        />

</RelativeLayout>